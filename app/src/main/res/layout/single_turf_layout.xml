<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/turfImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/turf1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.3"
        android:scaleType="center">
    </ImageView>
    <TextView
        android:id="@+id/turfNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turf_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turfImage"
        app:layout_constraintHorizontal_bias="0.035"
        android:textSize="22sp"
        android:textStyle="bold">
    </TextView>
    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_location_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turfNameText"
        android:paddingTop="30dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:id="@+id/turfAddressText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_percent="0.8"
        android:textSize="15sp"
        android:text="turfAddressss"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintLeft_toRightOf="@id/locationIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turfNameText"
        app:layout_constraintBottom_toBottomOf="@id/locationIcon"
        app:layout_constraintVertical_bias="1"/>
    <ImageView
        android:id="@+id/starImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintTop_toBottomOf="@id/locationIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="30dp">
    </ImageView>
    <TextView
        android:id="@+id/ratingText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintBottom_toBottomOf="@id/starImage"
        app:layout_constraintVertical_bias="1"
        android:text="@string/_5_0"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/starImage"
        app:layout_constraintTop_toBottomOf="@id/turfAddressText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/availableSportsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Sports"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/starImage"
        app:layout_constraintHorizontal_bias="0.035"
        android:layout_marginTop="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_recycler_view"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/availableSportsText"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>
    <Button
        android:id="@+id/bookNowBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"
        android:text="Book Now"
        app:layout_constraintTop_toBottomOf="@id/categories_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/capacityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/categories_recycler_view"
        app:layout_constraintBottom_toTopOf="@id/bookNowBtn"
        app:layout_constraintLeft_toRightOf="@id/capacity1Text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.5"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/capacity1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity  :"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/categories_recycler_view"
        app:layout_constraintBottom_toTopOf="@id/bookNowBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.5"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/bookNowText"
        android:textColor="#E60909"
        android:textStyle="bold|italic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="1"
        android:text="@string/kindly_choose_a_category_to_proceed_with_your_booking"
        app:layout_constraintTop_toBottomOf="@id/categories_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.7"
        android:paddingStart="40dp"
        android:paddingEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>